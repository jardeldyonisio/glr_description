        </dynamics>
      </axis>
      <physics>
        <ode>
          <limit>
            <cfm>0</cfm>
            <erp>0.2</erp>
          </limit>
          <suspension>
            <cfm>0</cfm>
            <erp>0.2</erp>
          </suspension>
        </ode>
      </physics>
    </joint>

    <joint name='barratras1_JOINT_3' type='revolute'>
      <parent>barratras1</parent>
      <child>rodeirotras1</child>
      <pose>-0.18 0 -0.08 0 -0 0</pose>
      <axis>
