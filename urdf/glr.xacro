<?xml version="1.0" encoding="utf-8"?>
<robot name="glr_description" xmlns:xacro="http://ros.org/wiki/xacro">
  
  <!-- Include Tugger definitions -->
  <xacro:include filename="$(find glr_description)/urdf/glr_tugger.xacro" />
  
  <!-- Include Trailer definitions -->
  <xacro:include filename="$(find glr_description)/urdf/glr_trailer.xacro" />
  
  <!-- Include Gazebo definitions -->
  <xacro:include filename="$(find glr_description)/urdf/glr_tugger_gazebo.xacro" />
  <xacro:include filename="$(find glr_description)/urdf/glr_trailer_gazebo.xacro" />

  <!-- Connection between tugger and trailer -->
  <joint name="tugger_trailer_joint" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="hitch_link" />
    <child link="trailer_link" />
    <axis xyz="0 0 1" />
    <limit lower="-0.6" upper="0.6" effort="100" velocity="1" />
    <dynamics damping="0" friction="0" />
  </joint>

</robot>

